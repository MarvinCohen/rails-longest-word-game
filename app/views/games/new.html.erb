      <div class="row">
        <%= text_field_tag :word, nil, id: "word", class: "input", placeholder: "ex: train", required: true %>
        <%= submit_tag "Play", class: "btn btn--primary" %>
      </div>

      <p class="hint">Astuce : utilise uniquement les lettres affichÃ©es.</p>
    <% end %>
  </div>
</div>
