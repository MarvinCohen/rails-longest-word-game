<div class="page">
  <div class="card">
    <header class="head">
      <h1>New Game</h1>
      <p class="sub">Trouve le mot le plus long possible avec la grille ðŸ‘‡</p>
    </header>

    <ul class="letters">
      <% @letters.each_with_index do |letter, i| %>
        <li class="tile" style="--d:<%= i %>"><%= letter %></li>
      <% end %>
    </ul>

    <%= form_with url: score_path, method: :post, data: { turbo: false }, class: "form" do %>
      <%= hidden_field_tag :letters, @letters.join(" ") %>

